{
  "git": {
    "commitMessage": "chore: release v${version}",
    "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template ./changelog-template.hbs"
  },
  "github": {
    "release": true
  },
  "hooks": {
    "after:bump": "npx auto-changelog -p && git add CHANGELOG.md"
  }
}
